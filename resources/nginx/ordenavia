server {
    listen 80;
    server_name ordenavia.davidgb.net;
    return 301 https://$server_name$request_uri;
}


server {
    listen 80;
    server_name backend-ordenavia.davidgb.net;
    return 301 https://$server_name$request_uri;
}


server {
    listen 443 ssl http2;
    server_name backend-ordenavia.davidgb.net;

    access_log /var/log/nginx/backend-ordenavia.app-access.log;
    error_log  /var/log/nginx/backend-ordenavia.app-error.log error;

    # allow larger file uploads and longer script runtimes
    client_max_body_size 100m;
    client_body_timeout 120s;

    sendfile off;

    # SSL Configuration - Replace the example backend-ordenavia.davidgb.net with your domain
    ssl_certificate /etc/nginx/ssl/backend-ordenavia.davidgb.net-fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/backend-ordenavia.davidgb.net-privkey.pem;
    ssl_session_cache shared:SSL:10m;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers "ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-                                                                                                                   CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384";
    ssl_prefer_server_ciphers on;

    location /static/ {
        alias /srv/ordenavia/backend_staticfiles/;
        expires 30d;
        access_log off;
    }

    location /media/ {
        alias /srv/ordenavia/backend_media/;
        expires 30d;
        access_log off;
    }

    location / {
        proxy_pass http://172.25.0.10:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}


server {
    listen 443 ssl http2;
    server_name ordenavia.davidgb.net;

    access_log /var/log/nginx/ordenavia.app-access.log;
    error_log  /var/log/nginx/ordenavia.app-error.log error;

    # allow larger file uploads and longer script runtimes
    client_max_body_size 100m;
    client_body_timeout 120s;

    sendfile off;

    # SSL Configuration - Replace the example ordenavia.davidgb.net with your domain
    ssl_certificate /etc/nginx/ssl/ordenavia.davidgb.net-fullchain.pem;
    ssl_certificate_key /etc/nginx/ssl/ordenavia.davidgb.net-privkey.pem;
    ssl_session_cache shared:SSL:10m;
    ssl_protocols TLSv1.2 TLSv1.3;
    ssl_ciphers "ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES256-GCM-SHA384:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-                                                                                                                   CHACHA20-POLY1305:ECDHE-RSA-CHACHA20-POLY1305:DHE-RSA-AES128-GCM-SHA256:DHE-RSA-AES256-GCM-SHA384";
    ssl_prefer_server_ciphers on;

    location / {
        proxy_pass http://172.25.0.11:80;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}